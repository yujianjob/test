@model LazyAtHome.WCF.Common.Contract.DataContract.Sms.Base_SmsSendDC

<div class="pageContent">
    <form method="post" enctype="multipart/form-data" action="@Url.Action("SaveSmsSend")" id="frmEditSmsSend" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
        <div class="pageFormContent nowrap" layouth="56">
            <dl>
                <dt>下行手机号：</dt>
                <dd>
                    @Html.TextBoxFor(model => model.Mobile, new { @maxlength = 11, @class = "required" })
                </dd>
            </dl>
            <dl>
                <dt>下行内容：</dt>
                <dd>
                    @Html.TextAreaFor(model => model.Content, new { @maxlength = 500, cols = "82", rows = "5", @class = "required" })
                </dd>
            </dl>
            <dl>
                <dt>期望发送时间：</dt>
                <dd>
                    <input type="text" name="RunTime" class="date" datefmt="yyyy-MM-dd HH:mm" readonly="true" />
                    <a class="inputDateButton" href="javascript:;">选择</a>

                </dd>
            </dl>


        </div>

        <div class="formBar">
            <ul>
                <!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit" id="btnSave">保存</button></div></div></li>
                <li>
                    <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                </li>
            </ul>
        </div>
    </form>
</div>


@model LazyAtHome.Web.WebManage.Models.Common.CategoryComboxModel
@{
    <script src="@Url.Content("~/Scripts/Common/CategoryCombox.js")" type="text/javascript"></script>
}
<input id="txtCategoryComboxUrl" type="hidden" value="@Url.Action("CategoryComboxGet", "Common")" />

@{
    //控件名称前缀
    string bindName = ViewBag.BindName ?? "BDVIdL";
    //拼凑控件名称
    var BDVIdl1 = string.Format("{0}1", bindName);
    var BDVIdl2 = string.Format("{0}2", bindName);
    var BDVIdl3 = string.Format("{0}3", bindName);
    //绑定控件
    @*@Html.DropDownList(BDVIdl1, new SelectList(Model.WashClassL1, "ID", "Name", Model == null ? -1 : Model.PID), new { id = "ddlWashClassL1", @class = "ddlstyle" })
    @Html.DropDownList(BDVIdl2, new SelectList(Model.WashClassL2, "ID", "Name", Model == null ? -1 : Model.ID), new { id = "ddlWashClassL2", @class = "ddlstyle" })
    @Html.DropDownList(BDVIdl3, new SelectList(Model.WashClassL3, "ID", "Name", Model == null ? -1 : Model.SID), new { id = "ddlWashClassL3", @class = "ddlstyle" })*@
    
    if (Model.Enable)
    {
        @Html.DropDownList(BDVIdl1, new SelectList(Model.WashClassL1, "ID", "Name", Model == null ? -1 : Model.PID), new { id = "ddlWashClassL1", @class = "ddlstyle" })
        @Html.DropDownList(BDVIdl2, new SelectList(Model.WashClassL2, "ID", "Name", Model == null ? -1 : Model.ID), new { id = "ddlWashClassL2", @class = "ddlstyle" })
        @Html.DropDownList(BDVIdl3, new SelectList(Model.WashClassL3, "ID", "Name", Model == null ? -1 : Model.SID), new { id = "ddlWashClassL3", @class = "ddlstyle" })
    }
    else
    { 
        @Html.DropDownList(BDVIdl1, new SelectList(Model.WashClassL1, "ID", "Name", Model == null ? -1 : Model.PID), new { id = "ddlWashClassL1", @class = "ddlstyle", disabled = "disabled" })
        @Html.DropDownList(BDVIdl2, new SelectList(Model.WashClassL2, "ID", "Name", Model == null ? -1 : Model.ID), new { id = "ddlWashClassL2", @class = "ddlstyle", disabled = "disabled" })
        @Html.DropDownList(BDVIdl3, new SelectList(Model.WashClassL3, "ID", "Name", Model == null ? -1 : Model.SID), new { id = "ddlWashClassL3", @class = "ddlstyle", disabled = "disabled" })
    }

}



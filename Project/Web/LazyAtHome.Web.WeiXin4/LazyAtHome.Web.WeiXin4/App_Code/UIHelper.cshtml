@helper ConvertOrderClass(int type)
{
    switch (type)
    {
        case 1:
            @(string.Format("个人普通"))
            break;
        case 2:
        @(string.Format("一键下单"))
            break;
        case 3:
        @(string.Format("门店订单"))
            break;
        case 4:
        @(string.Format("奢侈品"))
            break;
    }
}

@helper ConvertStep(int step)
{
    switch (step)
    {
        case 1:
            @(string.Format("待支付"))
            break;
        case 2:
        @(string.Format("取件中"))
            break;
        case 3:
        @(string.Format("送洗中"))
            break;
        case 4:
        @(string.Format("洗涤中"))
            break;
        case 5:
        @(string.Format("出库中"))
            break;
        case 6:
        @(string.Format("送件中"))
            break;
        case 7:
        @(string.Format("配送完成"))
            break;
    }
}

@helper ConvertPayMoneyType(int type)
{
    switch (type)
    {
        case 0:
            @(string.Format("现金支付"))
            break;
        case 1:
        @(string.Format("余额"))
            break;
        case 2:
        @(string.Format("懒人卡"))
            break;
        case 3:
        @(string.Format("支付宝"))
            break;
        case 4:
        @(string.Format("腾讯财付通"))
            break;
        case 5:
        @(string.Format("微信支付"))
            break;
        case 9:
        @(string.Format("优惠券"))
            break;
        case 100:
        @(string.Format("系统调整"))
            break;
    }
}

@helper ConvertOrderStatus(int type)
{
    switch (type)
    {
        case 6:
            @(string.Format("已退单"))
            break;
        case 7:
        @(string.Format("已拆单"))
            break;
        case 16:
        @(string.Format("用户撤销"))
            break;
        case 32:
        @(string.Format("系统撤销"))
            break;
    }
}
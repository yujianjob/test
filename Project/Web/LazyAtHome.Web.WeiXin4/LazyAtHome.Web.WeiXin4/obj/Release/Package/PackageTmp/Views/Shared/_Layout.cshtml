<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no, minimal-ui">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="renderer" content="webkit">
    <title>@ViewBag.Title</title>
    <link href="/Content/ldj.css?v=2014122204" media="screen" rel="stylesheet">
    <link href="/main.css" media="screen" rel="stylesheet">
    <script src="/Scripts/jquery-2.1.1.min.js"></script>
    <script src="/Scripts/landaojia.js?v=2014122202"></script>
    <script>
        var page = { moving: false };
        page.init = function () {
            page.tap = function () { };
            page.swipeUp = function () { };
            page.swipeRight = function () { };
            page.swipeDown = function () { };
            page.swipeLeft = function () { };
            page.repaint = function () { };
        };
        page.onresize = function () {
            document.documentElement.style.fontSize = parseInt($('.page').get(0).offsetWidth) / 24 + 'px';
            // page.repaint();
        };
        page.init();

        $(window).on('resize', function () { page.onresize(); });

    </script>
</head>

<body onload="page.onresize();" >
    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>

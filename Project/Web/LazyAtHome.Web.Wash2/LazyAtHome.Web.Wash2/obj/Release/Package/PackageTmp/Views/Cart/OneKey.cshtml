        function FuncBindCoupon() {
            //if (!txtCode.value.trim().match("^[0-9a-zA-Z]{6,16}$")) {
            //    txtCode.focus();
            if (!$("#txtCode").val().trim().match("^[0-9a-zA-Z]{6,16}$")) {

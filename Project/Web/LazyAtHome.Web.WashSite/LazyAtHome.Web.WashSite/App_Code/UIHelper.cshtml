@helper ConvertPayStatus(int orderstatus, int paystatus)
{
    switch (orderstatus)
    {
        case 0:
            @(string.Format("待审核"))
            break;
        case 1:
        if (paystatus == 0)
        {
            @(string.Format("未支付"))
        }
        else
        {
            @(string.Format("已支付"))
        }
        break;
        case 16:
        @(string.Format("已取消"))
        break;
        case 32:
        @(string.Format("已关闭"))
        break;
        case 2:
        @(string.Format("已完成"))
        break;

    }
}

@helper CalcuExpress(decimal totalPrice)
{
    if (totalPrice < 25)
    {
        totalPrice += 8;
    }
    @(string.Format(totalPrice.ToString()))
}
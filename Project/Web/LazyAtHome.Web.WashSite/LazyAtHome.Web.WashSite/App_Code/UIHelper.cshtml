@helper CheckBoxDefault(int status)
{
    if (status == 1)
    {
        @(string.Format("checked=\"checked\""))
    }
}

@helper ShowThis(bool b)
{
    if (b)
    {
        @(string.Format("this"))
    }
}


@helper NavStyleSelect(string a, string b)
{
    if (a == b)
    {
        @(string.Format("class=this"))
    }
}

@helper ConvertOrderStatus(int status)
{
    switch (status)
    {
        case 0:
            @(string.Format("一键下单未审核"))
            break;
        case 1:
        @(string.Format("创建订单/工厂订单未提交"))
            break;
        case 2:
        @(string.Format("完成订单"))
            break;
        case 6:
        @(string.Format("已退单"))
            break;
        case 7:
        @(string.Format("已拆单"))
            break;
        case 16:
        @(string.Format("用户撤销"))
            break;
        case 32:
        @(string.Format("系统撤销"))
            break;
    }
}


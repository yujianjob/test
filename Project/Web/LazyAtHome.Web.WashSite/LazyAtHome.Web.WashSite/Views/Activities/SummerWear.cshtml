@section scripts
{
    <script type="text/javascript">
        $(function () {
            $(":checkbox").click(function () {                
                var index = 0;
                var totalPrice = 0;
                var maxPrice = 0;
                $(":checked").each(function () {
                    var currPrice = parseInt($(this).attr('price'));
                    totalPrice += currPrice;
                    index++;
                    if (currPrice > maxPrice)
                        maxPrice = currPrice;
                });
                $(".original-price").html(totalPrice + "元");
                if (index < 5)
                {
                    $(".activity-price").html(totalPrice + "元");
                    $(".total-price").html("0元");
                }
                else
                {
                    $(".activity-price").html(totalPrice - maxPrice + "元");
                    $(".total-price").html(maxPrice + "元");
                }
            })
        })

        function CreateOrder() {
            var index = 0;
            var param = "";
            $(":checked").each(function () {
                param += $(this).attr('pid') + ",";
                index++;
            });

            if (param != "")
                param = param.substring(0, param.length - 1);

            var bCheck = true;
            if (index < 5)
                bCheck = confirm("您选择的数量小于5件，将无法得到活动优惠。");

            if (bCheck) {
                window.location.href = "/Activities/Submit/3?param=" + param;
            }
        }
    </script>

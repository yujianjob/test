@section scripts
{
    <script type="text/javascript">
        function showCardCode(obj) {
            var str = "<div class='rel-div'>"
            str += "<div class='ewm-box'>";
            str += "<img src='img/ewm.jpg'>";
            str += "<span>二维码通过APP客户端访问二维码快捷绑定懒人卡</span>";
            str += "</div></div>";
            $('.rel-div').remove();
            $(obj).parent().append(str);
        }
    </script>
}

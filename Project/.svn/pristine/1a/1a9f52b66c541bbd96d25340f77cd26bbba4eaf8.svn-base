@model LazyAtHome.Web.WebManage.Models.Express.ExpOperatorModel


<!--报错信息-->
@Html.Raw(ViewBag.Script)

<div class="pageContent">
    <form method="post" action="@Url.Action("SaveExpOperator", "Express")" id="frmSaveExpOperator" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
        <div class="pageFormContent" layouth="56">
            <div class="panel">
                <h1>基本信息</h1>
                <div>
                    @Html.HiddenFor(model => model.ExpOperatorInfo.ID)
                    <div class="unit">
                        <p>
                            <label>姓名：</label>
                            @Html.TextBoxFor(model => model.ExpOperatorInfo.Name, new { @maxlength = 50, @class = "required" })
                        </p>
                        <p>
                            <label>手机：</label>
                            @Html.TextBoxFor(model => model.ExpOperatorInfo.MpNo, new { @maxlength = 50, @class = "required digits" })
                        </p>
                    </div>


                    <div class="unit">
                        <p>
                            <label>app登录名：</label>
                            @Html.TextBoxFor(model => model.ExpOperatorInfo.LoginName, new { @maxlength = 50, @class = "required" })
                        </p>
                        <p>
                            <label>app密码：</label>


                            @if (Model.ExpOperatorInfo.ID == 0)
                            {
                                @Html.TextBoxFor(model => model.ExpOperatorInfo.LoginPwd, new { @maxlength = 50, @class = "required", alt = "字母数字下划线6-20位" })
                            }
                            else
                            {
                                @Html.TextBoxFor(model => model.ExpOperatorInfo.LoginPwd, new { @maxlength = 50, type = "password", alt = "字母数字下划线6-20位" });
                            }
                        </p>
                    </div>

                    <div class="unit">
                        <p>
                            <label>app角色：</label>
                            @Html.RadioButtonFor(model => model.ExpOperatorInfo.Type, 1)快递员
                            @Html.RadioButtonFor(model => model.ExpOperatorInfo.Type, 2)司机
                        </p>

                    </div>

                    <div>
                        <dl class="nowrap">
                            <dt>存衣点：</dt>
                            <dd>
                                <input id="ExpOperatorInfo_NodeID" name="ExpOperatorInfo.NodeID" value="@Model.ExpOperatorInfo.NodeID" type="hidden" />
                                <input id="ExpOperatorInfo_NodeName" class="required" name="ExpOperatorInfo.NodeName" type="text" lookupgroup="ExpOperatorInfo" value="@Model.ExpOperatorInfo.NodeName" readonly="readonly" />
                                <a class="btnLook" href="@Url.Action("NodeView", "Express")" lookupgroup="ExpOperatorInfo">选择存衣点</a>
                                <span class="info">选择存衣点</span>
                            </dd>
                        </dl>
                    </div>

                </div>
            </div>


        </div>

        <div class="formBar">
            <ul>
                <!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit" id="btnSave">保存</button></div></div></li>
                <li>
                    <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                </li>
            </ul>
        </div>
    </form>
</div>



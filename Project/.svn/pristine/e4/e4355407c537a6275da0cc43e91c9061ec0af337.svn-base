@section scripts
{
    <script type="text/javascript">
        var clickSource = 0;
        $(function () {
            $(".tabSwitch li").each(function (i) {
                $(this).click(function () {
                    $(".tabSwitch li").removeClass("active");
                    $(this).addClass("active");
                    $(".list").hide();
                    $(".list").eq(i).show();
                });
            });
            $("#menuIcon").remove();
            AddToCartProcess(0, true, 0, null);
        });

        function addToCart(obj, event) {
            var pid = $(obj).attr("pid");
            var ptype = $(obj).attr("ptype");
            clickSource = 1;
            AddToCartProcess(pid, true, ptype, event);
        }

        function OpearCart(pid, opear, ptype, event) {
            clickSource = 2;
            AddToCartProcess(pid, opear, ptype, event);
        }

        function AddToCartProcess(pid, opear, ptype, e) {
            if (e != null)
                e.preventDefault();
            if (opear == null)
                opear = true;

            var postData = { pid: pid, opearAdd: opear, type: ptype };
            $.ajax({
                type: "post",
                url: "/Cart/jsRHAddToCart",
                data: postData,
                dataType: "json",
                success: function (resultJson) {
                    if (resultJson != null) {
                        if (resultJson.Code == 1) {
                            $(".gwlist-cont").html(resultJson.Content);
                            totalCount = resultJson.TotalCount;
                            $("#tc").html("(" + totalCount + ")");
                            $(".total-price").html("总计 <font class='red'><b>￥" + resultJson.TotalPrice.toFixed(2) + "</b></font>");
                            if (clickSource == 1)
                                showPopDiv("已加入洗衣篮");
                        }
                        else
                            showPopDiv(resultJson.Msg);
                    }
                },
                error: function (msg) {
                    showPopDiv("服务器异常，请稍微再试！");
                }
            });
        }
    </script>
}
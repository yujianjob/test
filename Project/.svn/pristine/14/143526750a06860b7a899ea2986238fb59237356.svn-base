package com.landaojia.washclothes.laundry.common.jsptag;

import java.text.SimpleDateFormat;
import java.util.Date;

/**
 * 静态文件帮助对象
 * <*>用于js、css、图片等静态文件的地址前缀
 * @author liuxi
 */
public class StaticFileConfig {
	
	/**
	 * 是否contextPath
	 */
	public static Boolean IS_CONTEXTPATH = true;
	
	/**
	 * 资源(地址)前缀
	 */
	public static String RES_PREFIX = "";

	/**
	 * 时间戳
	 */
	public static String t0 = new SimpleDateFormat( "yyyyMMddHHmmss" ).format( new Date() );
	
	public void setIsContextPath( Boolean isContextPath) {
		StaticFileConfig.IS_CONTEXTPATH = isContextPath;
	}

	public void setResPrefix(String resPrefix) {
		StaticFileConfig.RES_PREFIX = resPrefix;
	}
}
